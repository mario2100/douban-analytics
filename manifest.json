{
	"name": "豆瓣读书统计",
	"version": "1.5",
	"description": "统计豆瓣主页的读书信息",
	"browser_action": {
		"default_icon": "icon128.png"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"tabs",
		"webRequest",
		"https://api.douban.com/"
	],
	"content_scripts": [
		{
			"matches": [
				"*://www.douban.com/people/*"
			],
			"css": [
				"css/content.css"
			],
			"js": [
				"js/echarts.simple.min.js",
				"js/axios.min.js",
				"js/content.js"
			]
		}
	],
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"manifest_version": 2
}